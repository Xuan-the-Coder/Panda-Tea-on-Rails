<%= form_with(url: search_path,local: true, method: "get") do %>

  <div class="field">
    <div class="control">

       <%= text_field_tag(:search_term,nil,class:'') %>

      <% category_array = Category.all { |category| [category.name, category.id] } %>
      <%= select_tag(:category_id, options_from_collection_for_select(category_array,'id', 'name', '1',),style: "text-transform: capitalize;") %>
        <%= submit_tag("Search",class:"button is-success button is-small") %>
      </div>
  </div>

<% end %>