<div class="column">
  <div class="card">
    <% if product.image.present? %>
      <div class="card-image">
        <figure class="image">
          <%= image_tag product.image,  alt: "MyInc Logo"%>
        </figure>
      </div>
    <% end %>
      <div class="card-content">
        <div class="content">
          <strong><%= link_to product.name, product %></strong>
        </div>
        <p>Price: $<%= product.price %></p>
      </div>
      <footer class="card-footer">

          <button class="button is-info"><%= link_to 'add to cart', add_to_cart_path(product.id), method: :post%></button>

        <%= button_to 'Buy Now', checkout_create_path, params:{id: product.id}, remote: true,  class:"button is-success"%>
      </footer>
  </div>
</div>